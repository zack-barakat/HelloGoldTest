<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:background="@color/colorShadow"
            android:fitsSystemWindows="true">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_ui_padding_large"
            android:fitsSystemWindows="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="@dimen/inputs_horizontal_margin"
                android:paddingTop="@dimen/common_ui_padding_medium"
                android:paddingEnd="@dimen/inputs_horizontal_margin">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_ui_padding_large"
                    android:layout_marginBottom="@dimen/common_ui_padding_large"
                    android:src="@mipmap/ic_launcher"/>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/tiEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_ui_padding_large"
                    android:textColorHint="@color/secondaryTextLight">

                <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorAccent"
                        android:hint="@string/text_email"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="16dp"
                        android:textColor="@color/white"
                        android:textColorHighlight="@color/colorAccent"
                        android:textColorHint="@color/secondaryTextLight"/>

            </android.support.design.widget.TextInputLayout>

            <CheckBox
                    android:id="@+id/cbTnc"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/common_ui_padding"
                    android:layout_marginBottom="@dimen/common_ui_padding"
                    android:layout_height="match_parent"
                    android:text="@string/text_is_tnc"/>


            <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_height_medium"
                    android:layout_marginTop="@dimen/common_ui_padding"
                    android:background="@color/colorAccent"
                    android:padding="12dp"
                    android:text="@string/text_register"
                    android:textColor="@color/primaryTextDark"/>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>